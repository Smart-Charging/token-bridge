{
  "compilerOptions": {
    "outDir": "./oracle/dist",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
    ],
    "types": ["node", "mocha"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "allowSyntheticDefaultImports": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true

  },
  "exclude": [
    "node_modules/**",
    "**/flycheck_*"
  ]
}
